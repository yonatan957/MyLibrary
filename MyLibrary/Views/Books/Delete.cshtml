@model MyLibrary.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>מחיקה</h1>

<h3>האם אתה בטוח שאתה רוצה למחוק ?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookWidth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookWidth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookHeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookHeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shelf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shelf.ShelfId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="מחיקה" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id=@Model.ShelfId>חזרה לרשימה</a>
    </form>
</div>
