@model MyLibrary.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>מידע</h1>

<div>
    <h4>ספר</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookWidth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookWidth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.bookHeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookHeight)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shelf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shelf.ShelfId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-id=@Model.ShelfId>חזרה לרשימה</a>
</div>
